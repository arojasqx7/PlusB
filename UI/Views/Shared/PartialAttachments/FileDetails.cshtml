@model IEnumerable<Domain.Entities.Attachment>


<table class="table table-bordered table-hover">
    <tr>
        <th class="col-md-4">File Name</th>
        <th class="col-md-2">Download </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td> @Html.DisplayFor(modelItem => item.FileName)</td>
            <td> @Html.ActionLink("Download", "DownLoadFile", new { id = item.Id, idTicket = item.IdTicket })</td>
        </tr>
    }
</table>