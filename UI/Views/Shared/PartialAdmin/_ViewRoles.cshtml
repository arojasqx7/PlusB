@model IEnumerable<UI.Models.RoleDTO>


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">X</span>
    </button>
    <h4 class="modal-title">View Existing Roles</h4>
</div>

<div class="modal-body">
    <table class="table table-bordered table-hover">
        <tr>
            <th>Role Name</th>
            <th>Options</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleName)
                </td>
                <td>
                    @if (item.RoleName.ToLower() != "administrator")
                    {
                        @Html.ActionLink("Remove", "DeleteUserRole", new { RoleName = item.RoleName }, new { onclick = "return confirm('Are you sure to delete this role?');" })
                    }
                </td>
            </tr>
        }
    </table>
</div>
<div class="modal-footer">
    <button class="btn btn-danger" data-dismiss="modal">Close</button>
</div>