@model UI.Models.RoleDTO

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">X</span>
    </button>
    <h4 class="modal-title">New Role</h4>
</div>


<div class="modal-body" style="display:inline-flex;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group" style="display:inline-flex;">
            @Html.LabelFor(model => model.RoleName, "Role Name:", htmlAttributes: new { @class = "control-label col-md-4" })
            @Html.EditorFor(model => model.RoleName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Role...", @required="required" } })
            @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger" })
            <input type="submit" value="Save" class="btn btn-success" style="margin-left:80px; height:35px;"/>
        </div>

    }
</div>
<div class="modal-footer"></div>

