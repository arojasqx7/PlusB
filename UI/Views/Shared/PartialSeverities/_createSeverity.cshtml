@model Domain.Entities.Severity

@using (Html.BeginForm("Create","Severities", FormMethod.Post))
{
    @Html.AntiForgeryToken()


        <div class="form-group">
            <label class="control-label col-md-2">Severity Name:</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.SeverityName, new { htmlAttributes = new { @class = "form-control", required="required"} })
                @Html.ValidationMessageFor(model => model.SeverityName, "", new { @class = "text-danger" })
            </div>
        </div>
        <br /><br /><br />

        <div class="form-group">
            <label class="control-label col-md-2">Severity Number:</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.SeverityNumber, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.SeverityNumber, "", new { @class = "text-danger" })
            </div>
        </div>
        <br /><br />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>

        <br /><br />
        <div class="form-group">
            <div class="col-md-8">
                <span class="text-danger">@Html.Raw(ViewBag.Message)</span>
            </div>
        </div>
}
