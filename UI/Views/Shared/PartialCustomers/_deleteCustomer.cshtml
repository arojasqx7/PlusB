@model Domain.Entities.Customer

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">X</span>
    </button>
    <h4 class="modal-title text-danger">Are you Sure to delete this Customer?</h4>
</div>

<div class="modal-body">
    <dl class="dl-horizontal">
        <dt>
            Company:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CompanyName)
        </dd>

        <dt>
            Company Id:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CompanyId)
        </dd>

        <dt>
            Description:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CompanyDescription)
        </dd>

        <dt>
            Manager:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ManagerName)
        </dd>

        <dt>
            Country:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Country)
        </dd>

        <dt>
            Address:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            Phone Number:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

        <dt>
            Email:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmailAddress)
        </dd>

        <dt>
            Phone Number:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

        <dt>
            Support Type:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SupportType)
        </dd>

        <dt>
            Initial Date:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.InitialDate)
        </dd>
    </dl>
</div>

<div class="modal-footer">
    @using (Html.BeginForm())
            {
        @Html.AntiForgeryToken()
        <button class="btn btn-danger" data-dismiss="modal">No</button>
        <input type="submit" class="btn btn-success" id="DeleteCustomer" value="Yes" />
    }
</div>

