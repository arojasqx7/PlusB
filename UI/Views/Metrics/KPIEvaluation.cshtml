@model IEnumerable<Domain.Entities.KPIEvaluation>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>Key Performance Indicator Evaluation</h1>
</section>

<br />
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-default">
                <div class="box-header">
                </div>
                <div class="box-body">
                    @using (Html.BeginForm("KPIEvaluation", "Metrics", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="form-group">
                                <label for="inputName" class="col-sm-2 control-label">Choose Consultant:</label>
                                <div class="col-sm-6">
                                    @Html.DropDownList("Id_Consultant", (IEnumerable<SelectListItem>)ViewBag.Id_Consultant, "----- Choose consultant to check his/her information -----", new { @class = "form-control", @required = "required" })
                                </div>
                            </div>

                            <div class="col-sm-3">
                                <input type="submit" value="View" class="btn btn-success" style="margin-top:-20px;" />
                            </div>
                        </div>

                        <br />
                        <div class="row">
                            <div class="form-group">
                                <label for="inputName" class="col-sm-2 control-label">From:</label>

                                <div class="col-sm-3" style="display:inline-flex;">
                                    @Html.TextBox("DateFrom", null, new { @class = "form-control datepicker", @placeholder = "From..", @required = "required", @readonly = "readonly", @style = "margin-left:10px;background-color: #fff;" })
                                </div>

                                <div class="col-sm-3" style="display:inline-flex;">
                                    <label for="to" class="control-label">To:</label>
                                    @Html.TextBox("DateTo", null, new { @class = "form-control datepicker", @placeholder = "To..", @required = "required", @style = "margin-left:10px;background-color: #fff;", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                    }
                    <br />
                    <br />
                    <br />
                    <br />
                    <table class="table table-bordered table-hover text-center">
                        <tr>
                            <th> Date </th>
                            <th> Consultant</th>
                            <th> KPI Name</th>
                            <th> Incident No</th>
                            <th> Score</th>
                            <th> Range</th>
                            <th> </th>
                        </tr>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td> @Html.DisplayFor(modelItem => item.Date) </td>
                                    <td> @Html.DisplayFor(modelItem => item.Consultant.FullName)</td>
                                    <td> @Html.DisplayFor(modelItem => item.KPI.Name) </td>
                                    <td> @Html.DisplayFor(modelItem => item.Ticket.Id) </td>
                                    <td class="text-bold"> @Html.DisplayFor(modelItem => item.Score) </td>
                                    <td> @Html.DisplayFor(modelItem => item.Range) </td>
                                    <td>
                                        @Html.Raw("<a href='/Metrics/viewDetails/" + item.ID + "' title='View More Metrics'>View</a>")
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/Scripts/jquery/dist/jquery.min.js"></script>
<script src="~/Scripts/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
<script>
    $('.datepicker').datepicker("option", "dateFormat", "dd/mm/yyyy");
</script>
